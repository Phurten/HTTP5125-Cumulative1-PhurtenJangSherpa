@model School.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<div>
    <h4>Are you sure you want to delete this teacher?</h4>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.TeacherFName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.TeacherLName</dd>
        <dt class="col-sm-2">Employee Number</dt>
        <dd class="col-sm-10">@Model.EmployeeNumber</dd>
        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.HireDate?.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.TeacherId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>